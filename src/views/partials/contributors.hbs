<form>
	<div class="form-group d-flex justify-content-center mt-5 mb-3">
  	  <div class="form-outline w-75">
    	  <input id="search-input" type="text" id="query" name="query" class="form-control" placeholder="search" value="{{query}}"/>
  	  </div>
  	  <button type="submit" class="btn btn-primary">
  	  	  <i class="fa fa-search" aria-hidden="true"></i>
  	  </button>
      <a href="?sort={{or sortQuery "-yotas"}}" class="btn btn-primary ms-3">
        <span>Sort by Yts</span>
        {{#if (isLink sortQuery "-yotas") }}
            <span>&uuarr;</span>
        {{/if}}
        {{#if (isLink sortQuery undefined) }}
            <span>&uuarr;</span>
        {{/if}}
        {{#if (isLink sortQuery "yotas") }}
            <span>&ddarr;</span>
        {{/if}}
      </a>
      {{#if (ifDifferent sortQuery undefined) }}
        <a href="." class="btn btn-primary ms-3">
            <span>x</span>
            Clear
        </a>
      {{/if}}
	</div>
</form>

<div class="container" style="margin-bottom: 25px">
    <div class="row g-3">
        {{#each records}}
            <div class="col-md-4">
                <div class="d-flex justify-content-between dev-card">
                    <span class="d-flex align-items-end">
                        <a style="text-decoration: none;" href="{{this.github_account}}" target="_blank">
                            <img class="rounded" style="width: 50px;" src="{{ this.github_account}}.png"/>
                        </a>
                        <div class="container">
                            <div class="row pb-2">
                                <a class="col" style="text-decoration: none;" href="{{this.github_account}}" target="_blank">
                                    <span>{{this.github_handle}}</span>
                                </a>
                            </div>
                            <div class="row" style="font-size: 0.8rem">
                                <span class="col">{{this.grade}}</span>
                            </div>
                        </div>
                    </span>
                    <span class="d-flex align-items-center" style="text-align: center">
                        <strong> {{this.yotas}} Yts</strong>
                    </span>
                </div>
            </div>
        {{/each}}
    </div>
</div>

{{#if  (isLower 0 pages)}}
    {{>pagination}}
{{/if}}